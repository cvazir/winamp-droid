<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        tools:context=".MainActivity"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:id="@+id/libBttn"
            android:text="lib"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClickGetMediaLib"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:text="Vol+"
            android:id="@+id/volupBttn"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClickVolUp"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:text="plst"
            android:id="@+id/pllstBttn"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClickGetPlaylist"
            android:layout_column="2"
            android:layout_row="0"
            />

        <Button
            android:text="prev"
            android:id="@+id/prevBttn"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClickPrevious"
            android:layout_row="1"
            android:layout_column="0" />

        <Button

            android:text="Play"
            android:id="@+id/playBttn"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClickPlay"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:text="next"
            android:id="@+id/nextBttn"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClickNext"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:text="Vol-"
            android:id="@+id/voldwnBttn"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClickVolDown"
            android:layout_row="2"
            android:layout_column="1" />


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView"
        android:layout_below="@id/gridLayout"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ExpandableListView"
        android:layout_below="@+id/listView"
        android:layout_marginTop="15dp"
        />

</RelativeLayout>

